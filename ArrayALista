function arrayToList(array){ 
  
  if(array.length<=0){
   return null; 
  }
      
  let lista = {   
    value: array.shift(),
    rest: arrayToList(array)
  };
  return lista;
  }
  
  
function listToArray(lista){
 
  let array = [];
  
  array.push(lista.value);  
  
  if(lista.rest!=null){    
   array = array.concat(listToArray(lista.rest));
   
  }
  
  
  return array;
  
}
