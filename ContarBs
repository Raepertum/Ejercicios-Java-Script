/*
Ejercicio 3.3 del libro Eloquent Javascript
*/

function countBs(stringToCount)
{
 return countChar(stringToCount, "B");
}
function countChar(stringToCount, charToCount)
{
 let count = 0;
 for(i=0; i<=stringToCount.length-1; i++){
  if(stringToCount[i]===charToCount){
   count++; 
  }   
 }
  return count;
}
